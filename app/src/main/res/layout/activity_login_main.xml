<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tacademy.fragmenttofagment.LoginActivity">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:id="@+id/btn_cancel"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:background="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp" />

    <Button
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="페이스북으로 가입하기"
        android:id="@+id/btn_facebook"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="구글계정으로 가입하기"
        android:id="@+id/btn_google"
        android:layout_below="@+id/btn_facebook"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="이메일로 가입하기"
        android:layout_below="@+id/btn_google"
        android:id="@+id/btn_email"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:id="@+id/image_line"
        android:layout_below="@+id/btn_email"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#f7a3a3"
        android:layout_marginTop="30dp"/>

    <Button
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="로그인하기"
        android:layout_below="@+id/image_line"
        android:id="@+id/btn_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

</RelativeLayout>
